%h1 Listing answers

%table
  %thead
    %tr
      %th Question
      %th Body
      %th User
      %th
      %th
      %th

  %tbody
    - @answers.each do |answer|
      %tr
        %td= image_tag answer.question.image.url()
        %td= answer.body
        %td= link_to answer.user.name, user_path(answer.user)
        %td= link_to 'Show', [answer.question, answer]
        - if current_user == answer.user then
          %td= link_to 'Edit', edit_question_answer_path(answer.question, answer)
          %td= link_to 'Destroy', [answer.question, answer], :method => :delete, :data => { :confirm => 'Are you sure?' }
        - else
          %td
          %td

= paginate @answers
