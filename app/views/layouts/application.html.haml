!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Oogiri
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top{role: "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{type: "button", data: {toggle: "collapse", target:".navbar-collapse"}}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "#"} Oogiri
        .collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              = link_to "Questions", questions_path, :class => 'navbar-link'
            %li
              = link_to "Answers", answers_path, :class => 'navbar-link'
          %p.navbar-text.pull-right
            - if user_signed_in?
              = link_to current_user.email, edit_user_registration_path, :class => 'navbar-link'
              \|
              = link_to "ログアウト", destroy_user_session_path, method: :delete, :class => 'navbar-link'
            - else
              = link_to "ユーザ登録", new_user_registration_path, :class => 'navbar-link'
              \|
              = link_to "ログイン", new_user_session_path, :class => 'navbar-link'
    - if notice.present?
      .alert.alert-dismissable.alert-success
        %button.close{type: "button", data: {dismiss: "alert"}} &times;
        %p= notice
    - if alert.present?
      .alert.alert-dismissable.alert-danger
        %button.close{type: "button", data: {dismiss: "alert"}} &times;
        %p= alert
    .container
      = yield
