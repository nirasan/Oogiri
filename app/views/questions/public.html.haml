%h1 Listing questions

%table
  %thead
    %tr
      %th Title
      %th Category
      %th User
      %th
      %th
      %th
      %th

  %tbody
    - @questions.each do |question|
      %tr
        %td= question.title
        %td= question.category
        %td= link_to question.user.name, user_path(question.user)
        %td= link_to 'Show', question
        %td= link_to 'Add Answer', new_question_answer_path(question)

= paginate @questions

